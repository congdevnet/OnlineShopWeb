@model IEnumerable<WebQuanLyBanHangDtos.ContentDto>
@{
    ViewBag.Title = "DanhSach";
    Layout = null;
}
<table id="tablerepoin" class="table table-bordered table-striped table-responsive">
    <thead>
        <tr class="text-center">
            <th width="5%">Stt</th>
            <th width="20%">Tên</th>
            <th width="20%">Tiêu đề meta</th>
            <th width="15%">Thể loại bài viết</th>
            <th width="15%">Ngày tạo</th>
            <th width="10%">Trạng thái</th>
            <th width="15%">Chức năng</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-center">@item.Stt</td>
                <td>@item.Name</td>
                <td>@item.MetaTitle</td>
                <td>@item.CategoryName</td>
                <td class="text-center">@item.CreatedDate.Value.ToString("dd/MM/yyyy")</td>
                <td class="text-center">
                    @if ((bool)item.Status)
                    {
                        <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked" checked onchange="ChangCheck(@item.ID)">
                    }
                    else
                    {
                        <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked" onchange="ChangCheck(@item.ID)">
                    }
                </td>
                <td class="text-center">
                    <a title="Sửa thông tin" onclick="Edit(@item.ID)" class="btn btn-sm btn-primary" href="#"><i class="fa fa-edit"></i></a>
                    &nbsp;&nbsp;&nbsp; |&nbsp;&nbsp;&nbsp;
                    <a title="Xóa bản ghi" onclick="Delete(@item.ID)" class="btn btn-sm btn-danger" href="#"><i class="fa fa-fw fa-trash"></i></a>
                </td>
            </tr>
        }

    </tbody>
</table>



