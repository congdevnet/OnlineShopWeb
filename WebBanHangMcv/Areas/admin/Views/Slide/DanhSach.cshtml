@{
    ViewBag.Title = "DanhSach";
    Layout = "~/Areas/admin/Views/Shared/Layout.cshtml";
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Danh sách</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Trình quảng cáo</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        @*<div class="card-title">*@
                        <div class="row">
                            <div class="col-8">
                                <strong>Danh sách trình quảng cáo</strong>
                            </div>
                            <div class="col-4" style="text-align:right" ;>
                                <span class="btn btn-primary" onclick="Add()">Thêm mới</span>
                            </div>
                        </div>
                        @*</div>*@
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <div id="tablerespon">

                        </div>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>

@*Modals thêm mới*@
<div class="modal fade" id="Modalquangcao" tabindex="-1" role="dialog" aria-labelledby="mediumModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="mediumModalLabel">Medium Modal</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="tile-body" id="tile-body">
                    <div class="form-group row">
                        <input type="hidden" id="isid" />
                        <label class="control-label col-md-2">Thứ tự hiển thị<span style="color:red">(*)</span></label>
                        <div class="col-md-4">
                            <input class="form-control" type="number" id="txtDisplayOrder">
                        </div>

                        <label class="control-label col-md-2">Link</label>
                        <div class="col-md-4">
                            <input class="form-control" type="text" id="txtLink" placeholder="Nhập link ảnh">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="control-label col-md-2">Sự mô tả</label>
                        <div class="col-md-10">
                            <textarea class="form-control" type="text" id="txtDescription" rows="6"></textarea>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="control-label col-md-2">Ngày tạo</label>
                        <div class="input-group date col-md-4" id="txtCreatedDatenew" data-target-input="nearest">
                            <input type="text" class="form-control datetimepicker-input" data-target="#txtCreatedDatenew" id="txtCreatedDate" />
                            <div class="input-group-append" data-target="#txtCreatedDatenew" data-toggle="datetimepicker">
                                <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                            </div>
                        </div>
                        <label for="txtnoibat" class="control-label col-md-2">Trạng thái</label>
                        <div class="col-md-4">
                            <input class="form-check-input" type="checkbox" id="txtStatus">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="control-label col-md-1">Ảnh file</label>
                        <div class="col-md-11">
                            <div class="row">
                                <a href="#" class="btn btn-success col-md-3" id="selectimg">Thêm ảnh</a>
                                <input class="form-control col-md-9" type="text" id="txtImage">
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="control-label col-md-1"></label>
                        <div class="col-md-11">
                            <img class="img-thumbnail" id="imgrow" style="width:100%;height:250px" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnSave" onclick="save()">Confirm</button>
                <button type="button" class="btn btn-secondary" id="btndelete" data-dismiss="modal">Hủy</button>
            </div>
        </div>
    </div>
</div>
@*End Modal thêm mới*@
@section scripts {
    <script type="text/javascript">
        $(function () {
            LoadTable();
            Setup();
        });
        function LoadTable() {
            $.ajax({
                url: '@Url.Action("Index", "Slide")',
                type: 'GET',
            }).done(function (data) {
                $('#tablerespon').html(data);
                $("#tablerepoin").DataTable({
                    "responsive": true, "lengthChange": false, "autoWidth": false,
                    "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
                }).buttons().container().appendTo('#tablerepoin_wrapper .col-md-6:eq(0)');

            });
        };
        function Setup() {
            $("#selectimg").on('click', function () {
                var finder = new CKFinder();
                finder.selectActionFunction = function (url) {
                    $("#txtImage").val(url);
                    $("#imgrow").attr("src", url);
                };
                finder.popup();
            });
            //Date picker
            $('#txtCreatedDatenew').datetimepicker({
                format: 'MM/DD/yyyy'
            });
           
        };
        function Reset() {
            $('#txtDisplayOrder').val("");
            $('#txtLink').val("");
            $('#txtDescription').val("");
            $('#txtCreatedDate').val("");
            $('#txtImage').val("");
            $("#txtStatus").prop('checked', false);
            
            ClearError('#txtImage');
            ClearError('#txtDisplayOrder');
            $("#btnSave").text("Lưu lại");
            $('#tile-body').nextAll(".spanError").remove();
        };

        var Bool = true;
        $("#txtStatus[type='checkbox']").change(function () {
            if ($(this).is(":checked")) {
                Bool = true;
            }
            else {
                Bool = false;
            }
        });
        function validate() {
            FormModalIsValid = true;
            ValidateRequireControl('#txtImage', 'Bạn phải nhập trường này!');
            ValidateRequireControl('#txtDisplayOrder', 'Bạn phải nhập trường này!');
            ValidateRequireControlMaxLength("#txtImage", "Bạn không được nhập quá tên chủ đầu tư quá 256 ký tự", 256);
        };
        function Get() {
            var Data = {
                ID: $("#isid").val(),
                Image: $('#txtImage').val(),
                DisplayOrder: $('#txtDisplayOrder').val(),
                Link: $('#txtLink').val(),
                CreatedDate: $("#txtCreatedDate").val() != "" ? $("#txtCreatedDate").val() : new Date(),
                Description: $('#txtDescription').val(),
                CreatedBy: new Date(),
                ModifiedDate: new Date(),
                ModifiedBy: null,
                Status: Bool,
            };
            return Data;
        };
        function set(Obj) {
            $("#isid").val(Obj.ID);
            $('#txtImage').val(Obj.Image);
            $('#txtDisplayOrder').val(Obj.DisplayOrder);
            $('#txtLink').val(Obj.Link);
            $("#txtCreatedDate").val(Obj.Ngaytao)
            CreatedBy: null;
            ModifiedDate: new Date();
            ModifiedBy: null;
            $('#txtDescription').val(Obj.Description);
            $('#imgrow').attr('src', Obj.Image);
        }
        function Add() {
            Reset();
            $("#isid").val("-1");
            $('#tile-body').nextAll(".spanError").remove()
            $('#mediumModalLabel').html('Thêm mới trình quảng cáo')
            $('#btnSave').html('Thêm mới')
            $("#Modalquangcao").modal({ backdrop: "static" })
        };
        function save() {
        var Obj = Get();
            validate()
            if (FormModalIsValid) {
                $.ajax({
                    url: '@Url.Action("AddandEdit", "Slide")',
                    dataType: "json",
                    type: "POST",
                    contentType: 'application/json; charset=utf-8',
                    data: JSON.stringify({ SlideDtos: Obj }),
                    async: true,
                    processData: false,
                    cache: false,
                    success: function (data) {
                        if (data.Status == 200) {
                            toastr.success(data.Mes);
                            $("#Modalquangcao").modal("hide")
                            LoadTable();
                        }
                    },
                    error: function (xhr) {
                        alert(xhr);
                    }
                });
            }
        };
        function Edit(id) {
                $.ajax({
                    url: '@Url.Action("GetObjById", "Slide")',
                    dataType: "json",
                    type: "POST",
                    contentType: 'application/json; charset=utf-8',
                    data: JSON.stringify({ id: id }),
                    async: true,
                    processData: false,
                    cache: false,
                    success: function (data) {
                        console.log(data.Data);
                        if (data.Status == 200) {
                            $('#btnSave').html('Cập nhật');
                            $('#textthemmoi').html('Chỉnh sửa');
                            $('#textthemmoinho').html('Chỉnh sửa');
                            $('#mediumModalLabel').html('Chỉnh sửa')
                            //hiện modal
                            $("#Modalquangcao").modal({ backdrop: "static" })

                            set(data.Data);
                        }
                    },
                    error: function (xhr) {
                        alert('error');
                    }
                });
        };
        function Delete(id) {
            const swalWithBootstrapButtons = Swal.mixin({
                customClass: {
                    confirmButton: 'btn btn-success',
                    cancelButton: 'btn btn-danger'
                },
                buttonsStyling: false
            })
            swalWithBootstrapButtons.fire({
                title: 'Bạn có chắc không?',
                text: "Bạn sẽ không thể khôi phục được dữ liệu!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Có, xóa nó!',
                cancelButtonText: 'Không, hủy bỏ!',
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                     $.ajax({
                            url: "@Url.Action("Delete", "Slide")",
                            type: "GET",
                            data: {id:id},
                            cache: false,
                         success: function (data) {
                             LoadTable();
                                swalWithBootstrapButtons.fire(
                                    'Đã xóa!',
                                    'Tệp của bạn đã bị xóa.',
                                    'success'
                                )
                            },
                            error: function (xhr) {
                                Swal.fire(xhr);
                            }
                     });
                } else if (
                    /* Read more about handling dismissals below */
                    result.dismiss === Swal.DismissReason.cancel
                ) {
                    swalWithBootstrapButtons.fire(
                        'Đã hủy',
                        'Tệp của bạn an toàn!',
                        'error'
                    )
                }
            })
        };
        function ChangCheck(id) {
            $.ajax({
                 url: "@Url.Action("ChangCheck", "Slide")",
                 type: "POST",
                 data: {id:id},
                 cache: false,
                 success: function (data) {
                     toastr.success(data.Mes);
                     LoadTable();
                 },
                 error: function (xhr) {
                     Swal.fire(xhr);
                 }});
        }
    </script>
}




