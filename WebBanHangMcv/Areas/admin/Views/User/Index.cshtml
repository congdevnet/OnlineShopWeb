@model IEnumerable<WebQuanLyBanHangDtos.UserDto>
@{
    ViewBag.Title = "DanhSach";
    Layout = null;
}
<table id="tablerepoin" class="table table-bordered">
    <thead>
        <tr class="text-center">
            <th>Stt</th>
            <th>Tên đăng nhập</th>
            <th>Số điện thoại</th>
            <th>Email</th>
            <th>Địa chỉ</th>
            <th>Trạng thái</th>
            <th>Chức năng</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-center">@item.Stt</td>
                <td>@item.UserName</td>
                <td>@item.Phone</td>
                <td>@item.Email</td>
                <td>@item.Address</td>
                <td class="text-center">
                    @if (item.Status.HasValue)
                    {
                        if (item.Status.Value)
                        {
                            <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked" checked onchange="ChangCheck(@item.ID)">
                        }
                        else
                        {
                            <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked" onchange="ChangCheck(@item.ID)">
                        }
                    }
                </td>
                <td class="text-center">
                    <a title="Sửa thông tin" onclick="Edit(@item.ID)" class="btn btn-sm btn-primary" href="#"><i class="fa fa-edit"></i></a>
                    &nbsp;&nbsp;&nbsp; |&nbsp;&nbsp;&nbsp;
                    <a title="Xóa bản ghi" onclick="Delete(@item.ID)" class="btn btn-sm btn-danger" href="#"><i class="fa fa-fw fa-trash"></i></a>
                </td>
            </tr>
        }

    </tbody>
</table>







