@model IEnumerable<WebQuanLyBanHangDtos.TemporaryShoppingCartDto>
@{ 
    Layout = null;
}
<table id="dtOrderExample" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>
                Ảnh sản phẩm
            </th>
            <th>
                Tên sản phẩm
            </th>
            <th>
                Số lượng
            </th>
            <th>
                Giá
            </th>
            <th>Chức năng</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td><img alt="anh" src="@item.Pro_img" style="width:100px; height:50px" class="text-center" /></td>
                <td class="text-center">@item.Pro_Name</td>
                <td class="text-center"><input type="number" min="1" style="height:25px" value="@item.Amount" onchange="changsoluong(@item.Id,this)" /></td>
                <td class="text-center"><span>@String.Format("{0:0,0 đ}", item.Price)</span></td>
                <td class="text-center"><a href="#" onclick="changDelte(@item.Id)">Xóa</a></td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th>
                Sản phẩm
            </th>
            <th>
                Số lượng:&nbsp;<span>@ViewBag.soluong</span>
            </th>
            <th>
                Tổng giá:
            </th>
            <th>
                <span>&nbsp;@String.Format("{0:0,0 đ}", ViewBag.tonggia)</span>
            </th>
        </tr>
    </tfoot>
</table>
